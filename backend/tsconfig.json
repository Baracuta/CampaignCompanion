{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "moduleDetection": "force"

  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}